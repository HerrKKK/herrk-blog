<?xml version="1.0" encoding="UTF-8"?>
<web-app>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>ClickCountServlet</servlet-name>
        <servlet-class>servlet.ClickCountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClickCountServlet</servlet-name>
        <url-pattern>/clickcount</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserManagerServlet</servlet-name>
        <servlet-class>servlet.UserManagerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserManagerServlet</servlet-name>
        <url-pattern>/usermanage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ArticleManagerServlet</servlet-name>
        <servlet-class>servlet.ArticleManagerServlet</servlet-class>
        <load-on-startup>10</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ArticleManagerServlet</servlet-name>
        <url-pattern>/articlemanager</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TestApiServlet</servlet-name>
        <servlet-class>servlet.TestApiServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestApiServlet</servlet-name>
        <url-pattern>/testapi</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DaemonServlet</servlet-name>
        <servlet-class>servlet.DaemonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DaemonServlet</servlet-name>
        <url-pattern>/daemon</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InitServlet</servlet-name>
        <servlet-class>servlet.InitServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
</web-app>
